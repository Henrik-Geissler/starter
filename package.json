{
  "name": "lux-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Lux component library monorepo",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,scss,css,md,html}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,scss,css,md,html}\" --ignore-path .gitignore",
    "storybook": "npm run storybook --workspace=packages/lux",
    "build:storybook": "npm run build:storybook --workspace=packages/lux"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
