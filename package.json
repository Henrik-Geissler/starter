{
  "name": "lux-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write .",
    "dev": "concurrently --names \"lux,react,angular,jquery\" --prefix-colors \"yellow,green,magenta,blue\" \"npm run dev --workspace=packages/lux\" \"npm run dev --workspace=examples/react-app\" \"npm run dev --workspace=examples/angular-app\" \"npm run dev --workspace=examples/jquery-app\"",
    "storybook": "npm run storybook --workspace=packages/lux",
    "build:storybook": "npm run build:storybook --workspace=packages/lux"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
